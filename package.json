{
	"name": "craftcms-pwa",
	"version": "0.1.0",
	"license": "MIT",
	"author": {
		"name": "Kyle Andrews",
		"email": "codingwithkyle@gmail.com",
		"url": "https://kyleandrews.dev/"
	},
	"scripts": {
		"prep": "rm -rf ./public/assets && mkdir ./public/assets && rm -rf ./_compiled",
		"compile": "tsc",
		"noscript": "node ./tools/noscript.js",
		"cleanup": "rm -rf ./_compiled",
		"build": "npm run prep && npm run compile && node ./tools/script-scrubber.js && node ./tools/cachebust.js && node ./tools/minify.js && mv public/assets/service-worker.js public/ && node ./tools/sass.js && npm run cleanup",
		"bundle": "node ./tools/bundler.js",
		"eslint": "eslint -c .eslintrc.js templates/**/*.ts && eslint -c .eslintrc.js controllers/**/*.ts",
		"stylelint": "stylelint \"templates/**/*.scss\"",
		"lint": "npm run eslint && npm run stylelint",
		"prettier": "prettier --write \"templates/**/*.ts\" && prettier --write \"controllers/**/*.ts\" && prettier --write \"transitions/**/*.ts\"",
		"precommit": "npm run eslint && npm run stylelint",
		"predeploy": "npm run prettier && npm run eslint && npm run stylelint && npm run build && npm run noscript"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^2.11.0",
		"@typescript-eslint/parser": "^2.11.0",
		"eslint": "^6.7.2",
		"eslint-config-prettier": "^6.7.0",
		"eslint-plugin-prettier": "^3.1.2",
		"glob": "^7.1.6",
		"husky": "^3.1.0",
		"minify": "^4.1.3",
		"node-sass": "^4.13.0",
		"prettier": "1.19.1",
		"rollup": "^1.27.13",
		"rollup-plugin-commonjs": "^10.1.0",
		"rollup-plugin-node-resolve": "^5.2.0",
		"stylelint": "^12.0.0",
		"stylelint-config-recommended": "^3.0.0",
		"tslint": "^5.20.1",
		"typescript": "^3.7.3"
	},
	"dependencies": {
		"@codewithkyle/notifyjs": "^1.0.0",
		"uuid": "^3.3.3"
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm run precommit"
		}
	}
}

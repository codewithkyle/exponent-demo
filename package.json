{
	"name": "craftcms-pwa",
	"version": "0.1.0",
	"license": "MIT",
	"author": {
		"name": "Kyle Andrews",
		"email": "codingwithkyle@gmail.com",
		"url": "https://kyleandrews.dev/"
	},
	"scripts": {
		"prep": "rm -rf ./_compiled",
		"compile": "tsc",
		"cleanup": "rm -rf ./_compiled",
		"sass": "node ./tooling/sass.js",
		"build": "npm run prep && npm run compile && npm run sass && djinnjs -e dev && npm run cleanup",
		"eslint": "eslint -c .eslintrc.js \"templates/**/*.ts\" && eslint -c .eslintrc.js \"controllers/**/*.ts\"",
		"stylelint": "stylelint \"templates/**/*.scss\"",
		"lint": "npm run eslint && npm run stylelint",
		"prettier": "prettier --write \"templates/**/*.ts\" && prettier --write \"controllers/**/*.ts\" && prettier --write \"transitions/**/*.ts\"",
		"precommit": "npm run eslint && npm run stylelint",
		"predeploy": "npm run prettier && npm run eslint && npm run stylelint && npm run build && npm run noscript",
		"bundle": "npm run unpack",
		"unpack": "snowpack"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^2.15.0",
		"@typescript-eslint/parser": "^2.15.0",
		"eslint": "^6.8.0",
		"eslint-config-prettier": "^6.9.0",
		"eslint-plugin-prettier": "^3.1.2",
		"glob": "^7.1.6",
		"husky": "^3.1.0",
		"minify": "^4.1.3",
		"node-sass": "^4.13.0",
		"prettier": "1.19.1",
		"rollup": "^1.29.0",
		"rollup-plugin-commonjs": "^10.1.0",
		"rollup-plugin-node-resolve": "^5.2.0",
		"snowpack": "^1.0.2",
		"stylelint": "^12.0.1",
		"stylelint-config-recommended": "^3.0.0",
		"tslint": "^5.20.1",
		"typescript": "^3.7.4"
	},
	"dependencies": {
		"@codewithkyle/notifyjs": "^1.0.3",
		"djinnjs": "0.0.13",
		"uuid": "^3.3.3"
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm run precommit"
		}
	},
	"snowpack": {
		"webDependencies": [
			"@codewithkyle/notifyjs"
		]
	}
}

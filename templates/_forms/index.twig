{% extends "_base/form" %}

{% if not craft.app.request.isLivePreview %}
    {% do eagerLoadElements(entry, [
        'form'
    ]) %}
{% endif %}

{% set section = {
    form: [
        {
            form: entry.form,
            spamPrevention: entry.spamPrevention,
            successMessage: entry.successMessage,
            id: entry.id,
        },
    ],
    spacing: '0',
    heading: entry.title,
} %}

{% block content %}
    <style>
        body {
            background-color: var(--grey-200);
            padding: 6rem 0;
        }

        form-shell {
            display: block;
            margin: 0 auto;
        }
        form-component {
            background-color: var(--white);
            border-radius: 0.25rem;
            box-shadow: var(--shadow-md);
            padding: 2rem 1rem 1rem;
            width: calc(840px + 4rem);
        }
        @media (min-width: 768px){
            form-component {
                padding: 2rem;
            }
        }
    </style>
    {% cache %}
        <form-shell style="display:block;width:100%;">
            {% include "_blocks/form" %}
        </form-shell>
    {% endcache %}
{% endblock %}

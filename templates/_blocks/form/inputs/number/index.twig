{% set minimum = '' %}
{% if input.minimum %}
    {% set minimum = 'min="' ~ input.minimum ~ '"' %}
{% endif %}

{% set maximum = '' %}
{% if input.maximum %}
    {% set maximum = 'max="' ~ input.maximum ~ '"' %}
{% endif %}

{% set step = '' %}
{% if input.step %}
    {% set step = 'step="' ~ input.step ~ '"' %}
{% endif %}
<input-component lazy-load-css="input-component" web-component>
    <input type="number" name="{{ input.title|camel }}" id="{{ input.title|camel }}" {{ input.required ? 'required' }} {{ minimum }} {{ maximum }} {{ step }}>
    <label for="{{ input.title|camel }}">{{ input.title }}</label>
</input-component>
<noscript>
    <style>
        input-component label{
            transform: translateY(0.25rem) scale(0.75);
        }
        input-component input{
            background-color: var(--grey-100);
        }
    </style>
</noscript>
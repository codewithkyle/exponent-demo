<lightswitch-component lazy-load-css="lightswitch-component" web-component>
    <input type="checkbox" name="{{ input.title|camel }}" id="{{ input.title|camel }}" {% if input.required %}required{% endif %} onchange="this.parentElement.classList.remove('is-invalid');"  tabindex="-1" />
    <label for="{{ input.title|camel }}" tabindex="0">
        <lightswitch-icon aria-hidden="true">
            <lightswitch-track></lightswitch-track>
            <lightswitch-knob></lightswitch-knob>
        </lightswitch-icon>
        <span>
            {{ input.title }}
            {% if input.helperText|length %}
                <helper-text lazy-load-css="helper-text" class="-floating" tabindex="0">
                    <helper-icon aria-label="information alert symbol">
                        <svg style="width:8px;height:8px" aria-hidden="true" focusable="false" data-prefix="fas" data-icon="info" class="svg-inline--fa fa-info fa-w-6" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 192 512"><path fill="currentColor" d="M20 424.229h20V279.771H20c-11.046 0-20-8.954-20-20V212c0-11.046 8.954-20 20-20h112c11.046 0 20 8.954 20 20v212.229h20c11.046 0 20 8.954 20 20V492c0 11.046-8.954 20-20 20H20c-11.046 0-20-8.954-20-20v-47.771c0-11.046 8.954-20 20-20zM96 0C56.235 0 24 32.235 24 72s32.235 72 72 72 72-32.235 72-72S135.764 0 96 0z"></path></svg style="width:12px;height:12px">
                    </helper-icon>
                    <p>{{ input.helperText }}</p>
                </helper-text>
            {% endif %}
        </span>
    </label>
</lightswitch-component>

<select-component web-component lazy-load-css="select-component">
    <select name="{{ input.title|camel }}" id="{{ input.title|camel }}" {{ input.required ? 'required' }}>
        <option value=""></option>
        {% for option in input.options %}
            <option value="{{ option.options|camel }}">{{ option.options }}</option>
        {% endfor %}
    </select>
    <label for="{{ input.title|camel }}">{{ input.title }}</label>
    <svg aria-hidden="true" focusable="false" data-prefix="fas" data-icon="caret-down" class="svg-inline--fa fa-caret-down fa-w-10" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512"><path fill="currentColor" d="M31.3 192h257.3c17.8 0 26.7 21.5 14.1 34.1L174.1 354.8c-7.8 7.8-20.5 7.8-28.3 0L17.2 226.1C4.6 213.5 13.5 192 31.3 192z"></path></svg>
    {% if input.helperText|length %}
        <helper-text lazy-load-css="helper-text">
            <helper-icon aria-label="information alert symbol">
                <svg style="width:8px;height:8px" aria-hidden="true" focusable="false" data-prefix="fas" data-icon="info" class="svg-inline--fa fa-info fa-w-6" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 192 512"><path fill="currentColor" d="M20 424.229h20V279.771H20c-11.046 0-20-8.954-20-20V212c0-11.046 8.954-20 20-20h112c11.046 0 20 8.954 20 20v212.229h20c11.046 0 20 8.954 20 20V492c0 11.046-8.954 20-20 20H20c-11.046 0-20-8.954-20-20v-47.771c0-11.046 8.954-20 20-20zM96 0C56.235 0 24 32.235 24 72s32.235 72 72 72 72-32.235 72-72S135.764 0 96 0z"></path></svg style="width:12px;height:12px">
            </helper-icon>
            <p>{{ input.helperText }}</p>
        </helper-text>
    {% endif %}
</select-component>
<noscript>
    <style>
        select-component label{
            transform: translateY(0.25rem) scale(0.75);
        }
        select-component input{
            background-color: var(--grey-100);
        }
    </style>
</noscript>
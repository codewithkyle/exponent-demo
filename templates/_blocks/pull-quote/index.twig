{% set image = craft.imager.transformImage(section.image[0], [
    { width: 768, ratio: 16/9, position: section.image[0].getFocalPoint(), format: imageFormat },
    { width: 1024, ratio: 16/9, position: section.image[0].getFocalPoint(), format: imageFormat },
]) %}

<section style="width:100%;display:block;">
    <pull-quote lazy-load-css="pull-quote">
        <img-shim>
            <img width="768" src="{{ image[0].url }}" srcset="{{ craft.imager.srcset(image) }}" alt="{{ section.image[0].alternateDescription }}" style="opacity:0;transition:opacity 300ms ease-in;" onload="this.style.opacity = '1';" loading="lazy" />
        </img-shim>
        <blockquote>
            <svg aria-hidden="true" focusable="false" data-prefix="fas" data-icon="quote-right" class="svg-inline--fa fa-quote-right fa-w-16" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><path fill="currentColor" d="M464 32H336c-26.5 0-48 21.5-48 48v128c0 26.5 21.5 48 48 48h80v64c0 35.3-28.7 64-64 64h-8c-13.3 0-24 10.7-24 24v48c0 13.3 10.7 24 24 24h8c88.4 0 160-71.6 160-160V80c0-26.5-21.5-48-48-48zm-288 0H48C21.5 32 0 53.5 0 80v128c0 26.5 21.5 48 48 48h80v64c0 35.3-28.7 64-64 64h-8c-13.3 0-24 10.7-24 24v48c0 13.3 10.7 24 24 24h8c88.4 0 160-71.6 160-160V80c0-26.5-21.5-48-48-48z"></path></svg>
            {{ section.quote }}
            <cite>{{ section.author }}</cite>
            {% if section.authorsTitle|length %}
                <span>{{ section.authorsTitle }}</span>
            {% endif %}
        </blockquote>
    </pull-quote>
</section>
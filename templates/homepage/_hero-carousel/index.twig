<hero-carousel style="display:block;width:100%;" eager-load-css="hero-carousel" web-component>
    {% for slide in data.heroCarousel %}
        <carousel-slide class="{{ (loop.first) ? 'is-active' : '' }}">
            <img src="{{ slide.image[0].url }}">
            {% if slide.heading|length or slide.copy|length %}
                <content-shim>
                    <div>
                        {% if slide.heading|length %}
                            <h1>{{ slide.heading }}</h1>
                        {% endif %}
                        {% if slide.copy|length %}
                            <p>{{ slide.copy }}</p>
                        {% endif %}
                        {% if slide.button.url|length %}
                            <a href="{{ slide.button.url }}" class="g-button -solid -black -wide -tall">{{ slide.button.customText }}</a>
                        {% endif %}
                    </div>
                </content-shim>
            {% endif %}
        </carousel-slide>
    {% endfor %}
    {% if data.heroCarousel|length > 1 %}
        <carousel-controls eager-load-css="hero-carousel-controls" style="opacity:0;visibility:hidden;transition:all 150ms ease;">
            {% for slide in data.heroCarousel %}
                <button class="{{ loop.first ? 'is-active': '' }}" data-index="{{ loop.index0 }}" aria-label="switch to slide {{ loop.index }}"></button>
            {% endfor %}
        </carousel-controls>
    {% endif %}
</hero-carousel>